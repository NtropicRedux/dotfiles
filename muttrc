source ~/.mutt/icloud_account

# Use mouse wheel
bind pager <down> next-line
bind pager <up> previous-line

# Don't add a '+' to urls that wrap
unset markers

# Don't ask to confirm deletions
set delete

# Don't move read mail to All Mail
set move = no

# Don't show help bar
set help = no

# Don't wait to switch mailboxes
set sleep_time = 0

# Read top-down mail instead of bottom-up
set sort = reverse-date

# Simplify UI
set status_format = "%f"
set date_format = "%m%d"
set index_format = "%Z %D %-15.15n %s"

### Identity
set reverse_name

### Pager
ignore *
unignore From Message-ID Date To Cc Bcc Subject
set pager_stop
# Prefer plain text to html + helps with dumb clients
alternative_order multipart/mixed multipart/related text/plain
# Consult mime.types for determining types of these attachments
mime_lookup application/octet-stream

### Other
